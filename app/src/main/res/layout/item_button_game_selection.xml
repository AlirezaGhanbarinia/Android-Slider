<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:paddingBottom="12dp" >

    <RelativeLayout
        android:layout_width="@dimen/item_selection_x"
        android:layout_height="@dimen/item_selection_y"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_button_background_selection">

        <TextView
            android:id="@+id/textViewSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Large Text"
            android:textSize="@dimen/learn_textview_countdown_font"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/material_grey_700"
            />

    </RelativeLayout>

</RelativeLayout>

