<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ui.ActivityMain"
    android:background="@drawable/ic_background">


    <TextView
        android:id="@+id/textViewCategoryLabel"
        android:text="Category"
        android:layout_width="wrap_content"
        android:textColor="@color/category_1"
        android:shadowColor="@color/material_black"
        android:textStyle="bold"
        android:textSize="@dimen/main_category_label_text_size"
        android:background="@color/material_white"
        android:padding="8dp"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sliderContainer"/>


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCategoryLabel"
        layout="@layout/item_slider" />


    <Button
        android:layout_width="280dp"
        android:layout_height="@dimen/main_button_play_y"
        android:scaleType="fitXY"
        android:background="@color/category_1"
        android:id="@+id/buttonPlay"
        android:text="@string/title_button_play"
        android:textColor="@color/material_white"
        android:textSize="38sp"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
